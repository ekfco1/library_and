<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".BoardUpdate">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#142E2B2B"
        android:paddingTop="12dp"
        android:text="도서후기"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/board_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:gravity="start"
        android:text="" />

    <EditText
        android:id="@+id/board_book_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:gravity="start"
        android:text="" />

    <EditText
        android:id="@+id/board_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:text=""
        android:gravity="start"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_board_c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00F5F2F2"
            android:onClick="btn_board_c"
            android:text="취소" />

        <Button
            android:id="@+id/btn_board_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00E9DFDF"
            android:textColor="#0097A7"
            android:onClick="btn_board_up"
            android:text="확인" />
    </LinearLayout>
</LinearLayout>